<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_view"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_item_separator"
    android:paddingLeft="@dimen/recyclerview_side_padding"
    android:paddingRight="@dimen/recyclerview_side_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:layout_marginTop="@dimen/list_item_distance"
        android:background="@color/white"
        android:orientation="horizontal"
        android:elevation="@dimen/list_item_elevation">

        <ImageView
            android:id="@+id/weather_condition_image_view"
            android:layout_width="@dimen/list_item_height"
            android:layout_height="match_parent"
            android:padding="@dimen/weather_condition_image_padding"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/date_text_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/basic_zero_dp"
                android:layout_weight="1"
                android:padding="@dimen/default_padding"
                android:layout_marginLeft="@dimen/sun_image_view_width"
                style="@style/ValueTextView"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/basic_zero_dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/sun_image_view_width"
                    android:layout_height="match_parent"
                    android:src="@drawable/sunrise"/>

                <TextView
                    android:id="@+id/sunrise_text_view"
                    android:layout_width="@dimen/basic_zero_dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/default_padding"
                    style="@style/ValueTextView"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/min_label"
                    style="@style/ValueTextView"
                    android:padding="@dimen/default_padding"/>

                <TextView
                    android:id="@+id/mintemp_text_view"
                    android:layout_width="@dimen/basic_zero_dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/default_padding"
                    android:textSize="@dimen/value_font_size"
                    android:gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/basic_zero_dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/sun_image_view_width"
                    android:layout_height="match_parent"
                    android:src="@drawable/sunset"/>

                <TextView
                    android:id="@+id/sunset_text_view"
                    android:layout_width="@dimen/basic_zero_dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/default_padding"
                    style="@style/ValueTextView"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/max_label"
                    android:padding="@dimen/default_padding"
                    style="@style/ValueTextView"/>

                <TextView
                    android:id="@+id/maxtemp_text_view"
                    android:layout_width="@dimen/basic_zero_dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/default_padding"
                    android:textSize="@dimen/value_font_size"
                    android:gravity="center_vertical"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>